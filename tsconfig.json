{
  "compilerOptions": {
    // Modern JS emit
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    // Interop for CJS libs like `mic`
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Allow .ts extensions in imports
    "allowImportingTsExtensions": true,
    "noEmit": true,
    // Type-safety
    "strict": true,
    "skipLibCheck": true, // don't choke on 3rd-party typings
    // Build output
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}